<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="10dp"
              android:orientation="vertical">

	<!--点码-->
	<android.support.design.widget.TextInputLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<android.support.design.widget.TextInputEditText
			style="@style/TierText"
			android:id="@+id/pay_req_vr_code"
			android:hint="@string/req_vr_code"
			android:inputType="number"/>

	</android.support.design.widget.TextInputLayout>

	<!--密码-->
	<android.support.design.widget.TextInputLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<android.support.design.widget.TextInputEditText
			style="@style/TierText"
			android:id="@+id/pay_req_vr_pin"
			android:hint="@string/req_vr_pin"
			android:inputType="number"/>

	</android.support.design.widget.TextInputLayout>



	<android.support.v7.widget.AppCompatSpinner
		style="@style/TierText"
		android:id="@+id/vr_card_spinner"
		android:spinnerMode="dropdown"
		android:prompt="@string/req_vr_pin_code"/>

</LinearLayout>
