<resources>

	<!-- Base application theme. -->
	<style name="SdkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/primaryColor</item>
		<item name="colorPrimaryDark">@color/primaryDarkColor</item>
		<item name="colorAccent">@color/secondaryColor</item>
	</style>
	<style name="SdkTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>
	<style name="SdkTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
	<style name="SdkTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

	<style name="LibTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!--
				<item name="windowActionBar">false</item>
				<item name="windowNoTitle">true</item>
		-->
	</style>

	<style name="PayDetailLabel">
		<!-- Customize your theme here. -->
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	<style name="PayDetailText">
		<!-- Customize your theme here. -->
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">2</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="SdkText" parent="Theme.AppCompat">
		<!-- Customize your theme here. -->
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginTop">6dp</item>
		<item name="android:layout_marginBottom">6dp</item>
	</style>

	<style name="Tier1">
		<!-- Customize your theme here. -->
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginTop">20dp</item>
		<item name="android:layout_marginLeft">30dp</item>
		<item name="android:layout_marginRight">30dp</item>
	</style>

	<style name="Tier2">
		<!-- Customize your theme here. -->
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_marginBottom">20dp</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="TierText">
		<!-- Customize your theme here. -->
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginTop">10dp</item>
		<item name="android:layout_marginBottom">10dp</item>
		<item name="android:textStyle">bold</item>
	</style>

</resources>
